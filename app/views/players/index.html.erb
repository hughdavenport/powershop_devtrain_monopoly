<p id="notice"><%= notice %></p>

<% if @game.number_of_players != @game_state.players.count %>
  <p id="waiting_for_players"><%= t('Waiting for '"#{pluralize(@game.number_of_players - @game_state.players.count, 'player')}") %></p>
<% end %>
<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Piece</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_state.players.each do |player| %>
      <tr>
        <td><%= User.find_by_id(player[:user]).username %></td>
        <td><%= player[:piece] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_game_player_path(@game) %>
<%= link_to 'Back', game_path(@game) %>
